                <Button Text="Inglês" Clicked="btn_ing_terceiro" BackgroundColor="LimeGreen" CornerRadius="50"/>
                <Button Text="História" Clicked="btn_his_terceiro" BackgroundColor="LimeGreen" CornerRadius="50"/>
                <Button Text="Filosofia" Clicked="btn_fil_terceiro" BackgroundColor="LimeGreen" CornerRadius="50"/>
                <Button Text="Sociologia" Clicked="btn_soc_terceiro" BackgroundColor="LimeGreen" CornerRadius="50"/>
                <Button Text="Biologia" Clicked="btn_bio_terceiro" BackgroundColor="LimeGreen" CornerRadius="50"/>
                <Button Text="Ed.Física" Clicked="btn_edfis_terceiro" BackgroundColor="LimeGreen" CornerRadius="50"/>

                <!--
            <Label Text= "Matérias curso" TextColor="Black" HorizontalOptions="CenterAndExpand" Padding="30"/> -->

                <Button Text="Qualidade e Teste de Software" Clicked="btn_testesoftware_terceiro" BackgroundColor="LimeGreen" CornerRadius="50"/>
                <Button Text="Internet e Protocolos" Clicked="btn_internet_terceiro" BackgroundColor="LimeGreen" CornerRadius="50"/>
                <Button Text="Progamação WEB III" Clicked="btn_web3_terceiro" BackgroundColor="LimeGreen" CornerRadius="50"/>
                <Button Text="Programação Mobile II" Clicked="btn_mob2_terceiro" BackgroundColor="LimeGreen" CornerRadius="50"/>
                <Button Text="TCC" Clicked="btn_tcc_terceiro" BackgroundColor="LimeGreen" CornerRadius="50"/>

                <Button Text="Voltar" HorizontalOptions="End" Clicked="Voltar3" BackgroundColor="LimeGreen" CornerRadius="50"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>